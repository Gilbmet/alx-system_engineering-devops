#!/usr/bin/env bash
# This script restarts the Apache server if it's not running.

# Check if Apache is running
if ! pgrep -x "apache2" > /dev/null
then
    echo "Apache is not running. Restarting..."
    # Restart Apache using the init.d script
    sudo /etc/init.d/apache2 restart
    echo "Apache has been restarted."
else
    echo "Apache is already running."
fi


